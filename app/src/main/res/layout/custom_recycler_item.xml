<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:padding="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_profile_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Aung Minn Khant"/>
            <TextView
                android:id="@+id/tv_profile_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_profile_more"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_more_vert"/>

    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:id="@+id/tv_post_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="240dp"
        android:textColor="@color/black"
        android:text="Hello Lkfjasldjfa sfja skfja;sldkfjslfj"
        />

    <ImageView
        android:id="@+id/img_post_photo"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_post_like"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Like"
            android:textSize="11sp"
            />
        <Button
            android:id="@+id/btn_post_comment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Comment"
            android:textSize="11sp"
            />
        <Button
            android:id="@+id/btn_post_share"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Share"
            android:textSize="11sp"
            />
    </LinearLayout>

</LinearLayout>